<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs', {page: "newarticle"}); %>
  </head>
  <body>
    <div>
      <a class="nav" href="javascript:history.go(-1)">Back</a>
    </div>
    <div class="main-container">
      <form action="/article/new" method="post">
        <div class="newarticle-form">
          <div class="head">
            <textarea
              id="title-form"
              class="title-form"
              type="text"
              name="title"
              placeholder="Title"
              rows="1"
              oninput="autoGrow(this);"
            ></textarea>
            <input
              class="date-form"
              type="text"
              name="date"
              placeholder="x:xx AM, Month xxth, Year"
            />
          </div>
          <div class="content">
            <textarea
              class="text-form"
              name="content"
              placeholder="Text"
              oninput="autoGrow(this);"
            ></textarea>
          </div>
          <input class="submit-form" type="submit" value="Post" />
        </div>
      </form>
    </div>

    <script>
      function autoGrow(element) {
        element.style.height = "0px";
        element.style.height = element.scrollHeight + "px";
      }
    </script>
  </body>
</html>
